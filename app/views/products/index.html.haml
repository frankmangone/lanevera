= provide(:title, 'Productos')
- content_for :javascript_includes do
  = javascript_include_tag "category_tabs_listeners.js"
  
/ Categories
.columns
  #categories
    .category-tab
      %h4 Categorías

    - if !@categories.empty?
      - @categories.each do |category|
        = render category
    - else
      %p No hay ninguna categoría aún
    
    - if current_user_admin?
      .category-add-tab
        = link_to new_category_path, class: 'btn btn-primary btn-symbol', id: 'new-category-btn', remote: true do
          %span.glyphicon.glyphicon-plus
        
  / Products
  #products
    = render 'search_bar'
    
    .product-index
      = render @products

    .product-creation
      - if current_user_admin?
        = render 'new_product_btn'