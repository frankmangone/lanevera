#new-product-form.row
	/ Info
	.info-input
		= form_for @product, remote: true do |f|
			= hidden_field_tag :authenticity_token, form_authenticity_token

			/ Title
			= f.label "Título"
			= f.text_field :title, class: 'form-control'
			#product-title-errors.errors
			%br/

			= f.label "Precio"
			= f.number_field :price, step: 0.5, class: 'form-control'
			#product-price-errors.errors
			%br/

			= f.label "Categoría"
			- if !@category_id
				/ If not viewing a category, select to which category the product belongs to

				= f.select(:category_id, list_categories_for_select(@categories), {}, { class: 'form-control' })
			- else
				/ If viewing a category, create the element directly into it
				= f.select :category_id, class: 'form-control' do
					= content_tag(:option, @category.name, value: @category_id)

			%br
			%br

			= f.button :submit, class: 'btn btn-primary', id: 'create-product' do
				Crear Producto
			= link_to "#", class: 'btn btn-primary', id: 'new-product-cancel' do
				Cancelar

	/ Photo
	.photo-input
		= render 'photos/form'