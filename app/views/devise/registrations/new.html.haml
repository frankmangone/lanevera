= provide :title, "Nueva cuenta"

%h3 Registro de Usuario

.form-wrapper.full-width
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .form-container
      .field-margin
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, class: 'form-control'

      .field-margin
        = f.label :last_name
        = f.text_field :last_name, class: 'form-control'

      .field-margin
        = f.label :email
        = f.text_field :email, class: 'form-control'

      .field-margin
        = f.label :phone
        = f.text_field :phone, class: 'form-control hover-tooltip', title: 'Números solamente'

      .field-margin
        = f.label :address
        = f.text_field :address, class: 'form-control'

      .field-margin
        = f.label :password
        = f.password_field :password, class: 'form-control hover-tooltip', title: '6 caracteres mínimo', autocomplete: "off"

      .field-margin
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"

      .actions
        = f.submit "¡Regístrate!",  class: 'btn btn-primary', remote: true

    .map-form
      = f.label :location
      = f.text_field :location, id: 'location-field'
      .map-wrapper
        #map
      = f.fields_for :location do |location|
        = render 'location_fields', f: location


= render "devise/shared/links"