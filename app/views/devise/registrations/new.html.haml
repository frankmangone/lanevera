= provide :title, "Nueva cuenta"

.rows.form-wrapper
  %h3 Registro de Usuario

  .form-container.columns
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .field
        = f.label "Nombre"
        %br/
        = f.text_field :first_name, class: 'form-control'

      .field
        = f.label "Apellido"
        %br/
        = f.text_field :last_name, class: 'form-control'

      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'form-control'

      .field
        = f.label "Contraseña"
        - if @validatable
          %span.label
            (#{@minimum_password_length} caracteres mínimo)
        %br/
        = f.password_field :password, class: 'form-control', autocomplete: "off"

      .field
        = f.label "Confirmar contraseña"
        %br/
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"
        
      .actions
        = f.submit "¡Regístrate!",  class: 'btn btn-primary'

    .map-wrapper
      %span.label Tu ubicación
      #map

  = render "devise/shared/links"