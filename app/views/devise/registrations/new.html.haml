= provide :title, "Nueva cuenta"

.rows.form-wrapper
  %h3 Registro de Usuario

  .form-container.columns
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .field
        = f.label :first_name
        %br/
        = f.text_field :first_name, class: 'form-control'

      .field
        = f.label :last_name
        %br/
        = f.text_field :last_name, class: 'form-control'

      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, class: 'form-control'

      .field
        = f.label :phone
        %br/
        = f.text_field :phone, autofocus: true, class: 'form-control'

      = f.fields_for :location do |location|
        = render 'location_fields', f: location

      .field
        = f.label :password
        - if @validatable
          %span.label
            (#{@minimum_password_length} caracteres mínimo)
        %br/
        = f.password_field :password, class: 'form-control', autocomplete: "off"

      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"

      .actions
        = f.submit "¡Regístrate!",  class: 'btn btn-primary'

    .map-form
      %span.label Tu ubicación
      .map-wrapper
        #map

  = render "devise/shared/links"