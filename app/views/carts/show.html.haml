- provide :title, "Carro de Compras"

.columns

	.cart-display
		= image_tag 'cart.png', id: "cart"

		.item-container
			- @cart.items.each do |item|
				= render 'item', item: item, confirmed: @cart.confirmed
			= render 'layouts/aligner'

			.actions
				- if !@cart.confirmed
					= link_to "Agregar producto", products_path, class: 'btn btn-primary'


	.cart-info
		%h2
			Total:
			%span.blue#total-price= @cart.write_price

		- if !@cart.confirmed
			= link_to confirm_cart_path(params[:id]), class: 'btn btn-primary', id: 'confirm-buy', method: 'post' do
				%h4 Confirmar compra
		- else
			.confirmed
				%h4 Compra confirmada
		
		.item-list
			%hr
			- @cart.items.each do |item|
				= render 'list_item', item: item

		
