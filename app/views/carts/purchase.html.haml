- provide :title, "Compra"

= link_to purchases_path, class: 'btn btn-primary' do
	%span.glyphicon.glyphicon-chevron-left
	Volver

.columns.purchase
	
	.user-info
		%h2= @cart.user.full_name
		%h4= @cart.user.address
		#map{latitude: @cart.user.location.latitude, longitude: @cart.user.location.longitude}

	.cart-info
		%h2
			Total:
			%span.blue#total-price= @cart.write_price

		- if !@cart.delivered
			= link_to pop_up_path(target: mark_delivered_cart_path(@cart.id), method: 'post', text: 'Â¿Deseas confirmar la entrega del pedido?'), class: 'btn btn-success', id: 'mark-delivered', remote: true do
				%h4 Marcar entregada
		
		.item-list
			%hr
			- @cart.items.each do |item|
				= render 'list_item', item: item