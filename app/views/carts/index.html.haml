= provide :title, "Compras de usuarios"

%h3 Compras

= will_paginate previous_label: "&#8592; Anterior", next_label: "Siguiente &#8594;"

.purchases
	- @carts.each do |cart|
		- if cart.delivered
			.cart-wrapper.delivered
				= render cart
		- elsif cart.cancelled
			.cart-wrapper.cancelled
				= render cart
		- else
			.cart-wrapper
				= render cart