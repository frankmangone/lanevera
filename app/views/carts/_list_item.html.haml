.wrapper
	- if item[:product].offer
		.columns{id: "list_item#{item[:product].id}", price: item[:product].offer.price }
			.list-title
				= item[:product].title
			.list-amount
				= "x"
				%span.value= item[:amount].to_s
	- else
		.columns{id: "list_item#{item[:product].id}", price: item[:product].price }
			.list-title
				= item[:product].title
			.list-amount
				= "x"
				%span.value= item[:amount].to_s

	%hr