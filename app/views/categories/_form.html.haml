#category-form
	= form_for @category, remote: true do |f|
		= f.text_field :name, placeholder: 'Categor√≠a...', class: 'form-control'
		#category-name-errors.errors
		- if params[:action] == 'edit'
			= f.submit "Guardar", class: 'btn btn-primary', id: 'create-category'
		- else
			= f.submit "Crear", class: 'btn btn-primary', id: 'create-category'
		= button_to "Cancelar", "#", class: 'btn btn-primary', id: 'new-category-cancel'