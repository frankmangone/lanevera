// Slide up last element in div
$(".category-form").children().last().remove();
$(".category-form").append("<%= j render 'form' %>");

// Then, slide down the form:
$("#category-form").hide().slideDown( function(){

	var $form = $(this);
	$("#category_name").focus();

	/* Bind the cancel button: */
	$("#new-category-cancel").click( function(event){
		event.preventDefault();

		$("#new-category-btn").parent().slideDown();
		$("#new-category-btn").removeAttr('disabled');
		
		$(this).parent().parent().slideUp( function(){
			$(this).remove();
		});
	});

});