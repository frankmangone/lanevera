/* Error */

var key;
var value;

<% @photo.errors.each do |key, value| %>
		key = "<%= key %>";
		value = "<%= value %>";

	$("#product-photo_id-errors").html("<p>"+value+"</p>")
							  .hide()
							  .slideDown();

	$("#photo-preview").addClass("invalid-field").on("click", function(){
		$("#product-photo_id-errors").slideUp( function(){ $(this).remove(); });
		$(this).removeClass("invalid-field");
		$(this).off("change");
	});

	// Restore upload info:

	$icon = $("#photo-upload-info").find("h2").find("span")
	$text = $("#photo-upload-info").find("p")

	$icon.removeClass('glyphicon-time').addClass('glyphicon-upload');
	$text.text('Click aqu√≠ para elegir una imagen');
<% end %>