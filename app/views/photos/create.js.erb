/* Success */

$("#new_photo").remove();
$("#product_photo_id").val("<%= @photo.id %>");

var $preview = $("#photo-preview");

$preview.css('background-image', 'url(<%= j @photo.photo.url() %>)');

// Remove upload info:

$icon = $("#photo-upload-info").find("h2").find("span")
$text = $("#photo-upload-info").find("p")

$icon.removeClass('glyphicon-time');
$text.text('');

// Enable upload button

$("#create-product").removeAttr('disabled');

// Add rendered delete button

$preview.after("<%= j render 'delete_button', photo: @photo %>");

$delete_button = $("#photo-delete");

$delete_button.click( function(){
	$(this).attr('disabled', 'true');
	$icon.addClass('glyphicon-time');
	$text.text('Borrando...');
	$preview.css('background-image', 'none');
	$("#create-product").attr('disabled', 'true');
});