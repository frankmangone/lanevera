= provide :title, 'Nueva oferta'

.rows
	%h3 Nueva oferta

	.offer-form-wrapper
		= render 'product', product: @offer.product

		= form_for @offer, remote: true do |f|

			= f.hidden_field :product_id, value: @offer.product.id

			.field
				= f.label "Precio de Oferta"
				= f.number_field :price, step: 0.5, class: 'form-control'	
			#offer-price-errors.errors

			= f.button :submit, class: 'btn btn-primary', id: 'create-product' do	
				Crear